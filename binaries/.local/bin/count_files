#!/bin/bash

subdir_files () {
  echo -e $1 \\t \| "$(find "$1" -type f | wc -l)"
}
export -f subdir_files

if [ -z "$1" ]; then
  DIR=$(pwd)
else
  DIR=$1
fi

if [ -z "$2" ]; then
  MAX_DEPTH=1
else
  MAX_DEPTH=$2
fi

find "$DIR" -maxdepth "$MAX_DEPTH" -mindepth 1 -type d -exec bash -c "subdir_files \"{}\"" \;
